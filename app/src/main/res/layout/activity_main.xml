<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/trulli_1"
    android:backgroundTint="#49C9C9C9"
    android:backgroundTintMode="src_over"
    android:foregroundTint="#FFFFFF"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10sp"
        android:onClick="goToLogIn"
        android:text="Accedi"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/button3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="80sp"
        android:layout_marginTop="15sp"
        android:onClick="goToLuoghi"
        android:text="Ricerca un luogo di interesse"
        app:backgroundTint="#3F51B5" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button3"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15sp"
        android:text="Sei un TURISTA?"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="230dp"
        android:layout_height="180dp"
        android:layout_below="@+id/button1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="5sp"
        app:srcCompat="@drawable/logo_alfa" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="10sp"
        android:text="Programma il tuo itinerario"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/button5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button4"
        android:layout_marginLeft="90sp"
        android:layout_marginTop="20sp"
        android:onClick="goToCalendario"
        android:text="Visualizza il tuo calendario"
        app:backgroundTint="#3F51B5" />

    <Button
        android:id="@+id/button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView2"
        android:layout_marginLeft="100sp"
        android:layout_marginTop="5sp"
        android:onClick="goToMenuLocali"
        android:text="Gestisci le tue attivitÃ "
        app:backgroundTint="#3F51B5" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="66dp"
        android:layout_height="74dp"
        android:layout_below="@+id/imageView"
        android:layout_marginLeft="13sp"
        android:layout_marginTop="3sp"
        app:srcCompat="@drawable/search_icon" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@+id/textView1"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="2sp"
        app:srcCompat="@drawable/map_icon" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imageView5"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="2sp"
        app:srcCompat="@drawable/calendar_icon" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="60dp"
        android:layout_height="70dp"
        android:layout_below="@+id/imageView6"
        android:layout_marginLeft="15sp"
        android:layout_marginTop="30sp"
        app:srcCompat="@drawable/shop_icon" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/button5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"
        android:text="Sei un GESTORE?"
        android:textColor="@color/black"
        android:textSize="24sp"
        android:textStyle="bold" />

</RelativeLayout>


